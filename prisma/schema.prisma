generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProfilContent {
  id           String   @id @default(cuid())
  title        String?
  deskripsi    String?
  visi         String?
  misi         String[]   // âœ… BOLEH di PostgreSQL
  tugasFungsi  String?
  profileImage String?
  updatedAt    DateTime @default(now()) @updatedAt
}

model SambutanContent {
  id        String   @id @default(cuid())
  fotoUrl   String
  nama      String
  jabatan   String
  sambutan1 String
  sambutan2 String
  sambutan3 String
  updatedAt DateTime @default(now()) @updatedAt
}

model Article {
  id        String   @id @default(cuid())
  title     String
  content   String   // Text content
  imageUrl  String?  // Main photo URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pejabat {
  id        String   @id @default(cuid())
  nama      String
  jabatan   String
  fotoUrl   String?
  urutan    Int      @default(0) // Untuk mengatur urutan tampilan
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LayananContent {
  id        String   @id @default(cuid())
  title     String
  deskripsi String
  updatedAt DateTime @default(now()) @updatedAt
}

model LayananItem {
  id        String   @id @default(cuid())
  title     String
  deskripsi String?
  fotoUrl   String
  type      String   // 'integrasi' atau 'kunjungan'
  urutan    Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
